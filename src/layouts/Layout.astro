---
import MainHead from "@/components/MainHead.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import "../styles/global.css";
const { language } = Astro.props;
---

<!doctype html>
<html lang={language.prefix}>
  <head>
    <MainHead />
  </head>
  <body
    class="relative text-slate-900 selection:bg-indigo-500 selection:text-white dark:text-slate-50 dark:selection:bg-indigo-400 dark:selection:text-slate-900"
  >
    <div
      class="absolute inset-0 -z-10 h-full w-full [background:radial-gradient(125%_125%_at_50%_10%,#f8fafc_40%,#a5b4fc_100%)] dark:[background:radial-gradient(125%_125%_at_50%_10%,#0f172a_40%,#312e81_100%)]"
    >
    </div>
    <Header language={language} />
    <slot />
    <Footer language={language} />
    <style is:global>
      :root {
        color-scheme: light dark;
      }

      html {
        font-family: "Onest Variable", system-ui, sans-serif;
        scroll-behavior: smooth;
      }

      body {
        color: rgba(17, 17, 17, 0.9);
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        overscroll-behavior: none;
      }

      @media (prefers-reduced-motion: reduce) {
        html {
          scroll-behavior: auto;
        }
      }

      @media (prefers-color-scheme: dark) {
        body {
          color: rgba(255, 255, 255, 0.9);
        }
      }
    </style>
  </body>
</html>
