---
import MainHead from "@/components/MainHead.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import "../styles/global.css";
const { language } = Astro.props;
---

<!doctype html>
<html lang={language.prefix}>
  <head>
    <MainHead />
  </head>
  <body class="flex flex-col min-h-screen relative text-slate-900 dark:text-slate-50 selection:bg-indigo-500 selection:text-white dark:selection:bg-indigo-400 dark:selection:text-slate-900">
    <div class="absolute inset-0 -z-10 h-full w-full [background:radial-gradient(125%_125%_at_50%_10%,#f8fafc_40%,#a5b4fc_100%)] dark:[background:radial-gradient(125%_125%_at_50%_10%,#0f172a_40%,#312e81_100%)]"></div>
    <Header language={language} />
    <slot />
    <Footer />
  </body>
</html>
