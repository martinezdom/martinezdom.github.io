---
interface Props {
  title: string;
  company: string;
  description: string;
  date: string;
}

const { title, company, description, date } = Astro.props;
---

<div
  class="absolute -start-1.5 mt-1.5 h-3 w-3 rounded-full border border-white bg-indigo-500 dark:border-gray-900 dark:bg-yellow-400"
>
</div>
<time
  class="mb-1 text-sm leading-none font-normal text-gray-500 dark:text-gray-500"
  >{date}</time
>
<h3 class="mt-2 text-lg font-semibold text-indigo-500 dark:text-yellow-400">
  {title}
</h3>
<h4 class="text-md mb-2 font-medium text-gray-600 dark:text-white">
  {company}
</h4>
<p
  class="mb-4 text-base font-normal text-pretty text-gray-500 dark:text-gray-400"
>
  {description}
</p>
