---
const { language } = Astro.props;
import SocialPill from "./SocialPill.astro";
import LinkedInIcon from "./icons/LinkedIn.astro";
import MailIcon from "./icons/Mail.astro";
import DocumentIcon from "./icons/Document.astro";
import GithubIcon from "./icons/Github.astro";
import Badge from "./Badge.astro";
---

<div>
  <div
    class="grid grid-cols-1 items-center gap-8 pb-8 md:grid-cols-3 md:items-start"
  >
    <div
      class="flex flex-col items-center gap-6 text-center md:col-span-2 md:items-start md:text-left"
    >
      <a
        href="https://linkedin.com/in/martinezdom"
        target="_blank"
        rel="noopener"
        class="flex items-center transition md:justify-center md:hover:scale-105"
      >
        <Badge>
          <span class="mr-1.5 flex h-2 w-2 items-center justify-center">
            <span
              class="absolute inline-flex h-2 w-2 animate-ping rounded-full bg-indigo-400 opacity-75"
            ></span>
            <span
              class="relative inline-flex h-2 w-2 rounded-full bg-indigo-500"
            ></span>
          </span>
          {language.heroBadge}
        </Badge>
      </a>
      <div
        class="flex flex-wrap items-end justify-center gap-x-2 md:justify-start"
      >
        <h1
          class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
        >
          Miguel Ángel Martínez
        </h1>
        <div
          class="hidden h-9 w-px self-center bg-indigo-500/40 md:block dark:bg-slate-700"
        >
        </div>
        <a
          href="https://github.com/martinezdom"
          class="mb-1 text-sm font-medium text-slate-700 hover:underline hover:underline-offset-2 dark:text-slate-300"
          >@martinezdom</a
        >
      </div>

      <p
        class="text-base leading-relaxed text-pretty text-slate-700 md:text-xl dark:text-slate-300"
        set:html={language.heroDescription}
      />

      <nav
        class="grid w-full max-w-sm grid-cols-2 gap-4 text-xs font-medium md:max-w-none md:grid-cols-4 md:text-sm"
      >
        <SocialPill href="https://www.linkedin.com/in/martinezdom/">
          <LinkedInIcon class="size-4" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/martinezdom">
          <GithubIcon class="size-4" />
          GitHub
        </SocialPill>
        <SocialPill href={`/CV-${language.prefix.toUpperCase()}.pdf`}>
          <DocumentIcon class="size-4" />
          {language.curriculum}
        </SocialPill>
        <SocialPill href="mailto:martinezdom@gmail.com">
          <MailIcon class="size-4" />
          {language.contactMe}
        </SocialPill>
      </nav>
    </div>

    <div class="order-first flex justify-center md:order-none md:justify-end">
      <img
        class="h-auto w-40 rotate-3 rounded-2xl border-2 border-indigo-500 object-cover transition duration-500 hover:scale-105 hover:rotate-0 md:w-48 lg:w-56 dark:border-yellow-200/90"
        src="/hero_picture.png"
        alt="Miguel Ángel"
      />
    </div>
  </div>
</div>
